doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title Staking Dashboard

        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        // Bootstrap icons
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css', rel='stylesheet')

        // Google fonts
        link(rel='preconnect', href='https://fonts.gstatic.com')
        link(href='https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&display=swap', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&display=swap', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&display=swap', rel='stylesheet')

        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

    body#page-top

        // Navigation
        nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top.shadow-sm
            .container.px-6
                a.navbar-brand.fw-bold(href='#page-top') Staking Dashboard
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                    | Menu
                    i.bi-list
                #navbarResponsive.collapse.navbar-collapse
                    ul.navbar-nav.ms-auto.me-4.my-3.my-lg-0
                        li.nav-item
                            a.nav-link.me-lg-3(href='#features') Features
                        li.nav-item
                            a.nav-link.me-lg-3(href='#download') Download
                    a(href='https://app.stakingdashboard.network')
                        button.btn.btn-primary.rounded-pill.px-3.mb-2.mb-lg-0
                            span.d-flex.align-items-center
                                i.bi-arrow-right-circle-fill.pr-3(style='margin-right: 8px;')
                                strong Login or Register

        // Mashead header
        header.masthead
            .container.px-5
                .row.gx-5.align-items-center
                    .col-lg-6
                        // Mashead text and app badges
                        .mb-5.mb-lg-0.text-center.text-lg-start
                            h1.display-1.lh-1.mb-3 Your All-In-One Staking Visualization Tool
                            p.lead.fw-normal.text-muted.textheader.mb-4 Track your staking performance across multiple blockchains and networks with ease!
                            p.lead.fw-normal.text-muted.textheader.mb-5
                                | Available for
                                span.mr-2
                                    img(src='assets/img/MultiversX.png', alt='MultiversX', height='20px')
                                    | MultiversX
                                | ,
                                span.mr-2
                                    img(src='assets/img/Cosmos.png', alt='Cosmos', height='20px')
                                    | Cosmos
                                | , and more coming soon!
                            .d-flex.flex-column.flex-lg-row.align-items-center
                                a.me-lg-3.mb-4.mb-lg-0(href='https://play.google.com/store/apps/details?id=com.ronanren.stakingdashboard')
                                    img.app-badge(src='assets/img/google-play-badge.svg', alt='...')
                                a(href='https://app.stakingdashboard.network')
                                    img.app-badge(src='assets/img/get-web-app.png', alt='...', style='width: 150px; height: auto;')
                    .col-lg-6
                        // Masthead device mockup feature
                        .masthead-device-mockup
                            include includes/gradient-circle
                            include includes/shape-1
                            include includes/shape-2
                            img(src='assets/img/dashboardDesktop.png', alt='...', class='devicemac')
                            

 

        // App features section
        section#features
            .container.px-5
                .row.gx-5.align-items-center
                    .col-lg-8.order-lg-1.mb-5.mb-lg-0
                        .container-fluid.px-5
                            .row.gx-5
                                .col-md-6.mb-5
                                    // Feature item
                                    .text-center
                                        i.bi-phone.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Available Everywhere
                                        p.text-muted.mb-0 Stake management on-the-go, across all devices
                                .col-md-6.mb-5
                                    // Feature item
                                    .text-center
                                        i.bi-wallet2.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt User-Friendly
                                        p.text-muted.mb-0 Simply add your wallet address and visualise your delegation
                            .row
                                .col-md-6.mb-5.mb-md-0
                                    // Feature item
                                    .text-center
                                        i.bi-safe.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Secure and Private
                                        p.text-muted.mb-0 Wallet stored locally, no back-end for utmost security and privacy
                                .col-md-6
                                    // Feature item
                                    .text-center
                                        i.bi-cash-stack.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Free to Use
                                        p.text-muted.mb-0 Gain insights into your staking delegation at no cost
                                    
                    .col-lg-4.order-lg-0
                        // Features section device mockup
                        .features-device-mockup 
                            include includes/gradient-circle
                            include includes/shape-1
                            include includes/shape-2
                            .device-wrapper
                                .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                                    .screen.bg-black
                                        // PUT CONTENTS HERE:
                                        // * * This can be a video, image, or just about anything else.
                                        // * * Set the max width of your media to 100% and the height to
                                        // * * 100% like the demo example below.
                                        // add image here
                                        img(src='assets/img/dashboardMobile.jpg', alt='...', style='max-width: 100%; height: 100%;')

        
        // App badge section
        section#download.bg-gradient-primary-to-secondary
            .container.px-5
                h2.text-center.text-white.font-alt.mb-4 Get the app now!
                .d-flex.flex-column.flex-lg-row.align-items-center.justify-content-center
                    a.me-lg-3.mb-4.mb-lg-0(href='https://play.google.com/store/apps/details?id=com.ronanren.stakingdashboard')
                        img.app-badge(src='assets/img/google-play-badge.svg', alt='...')
                    a(href='https://app.stakingdashboard.network')
                        img.app-badge(src='assets/img/get-web-app.png', alt='...', style='width: 150px; height: auto;')

        // Footer
        footer.bg-black.text-center.py-5
            .container.px-5
                .text-white-50.small
                    .mb-2 &copy; Staking Dashboard 2023. All Rights Reserved.
                    a(href='https://github.com/ronanren') Github Developer
                    <span class="mx-1">&middot;</span>
                    a(href='/privacy-policy.html') Privacy Policy
                    <span class="mx-1">&middot;</span>
                    a(href='/terms-conditions.html') Terms and Conditions
                    
        
        include includes/feedback-modal.pug

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')

